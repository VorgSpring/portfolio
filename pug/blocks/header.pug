include ../template/mixins.pug
include info.pug
include social-buttons.pug

mixin header(mod, flag)
    - flag = flag || true
    - mod = mod || ''
    header(class='page-header ' + mod)
        .page-header__arrow
        .page-header__menu
            +social
            include burger.pug
        +info(flag)
        if !flag
            h1.title--big-white Блог
            p.page-header__description.
                Статьи, которые я написал
